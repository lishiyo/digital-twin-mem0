# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Weaviate
WEAVIATE_URL=https://your-instance-id.weaviate.network
WEAVIATE_API_KEY=your_weaviate_api_key_here
WEAVIATE_TENANT=1

# wasabi bucket 
WASABI_ACCESS_KEY=your_access_key_here
WASABI_SECRET_KEY=your_secret_key_here
WASABI_BUCKET=digital-twin-graphrag-prototype
WASABI_REGION=us-west-1
WASABI_ENDPOINT=https://s3.us-west-1.wasabisys.com

# Add the EMBEDDING_MODEL variable to match the dimension of your existing vectors
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4.1-mini

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=digital-twin-graphrag-prototype
DB_USER=postgres
DB_PASSWORD=postgres

# Neo4j Database Configuration (Cloud or local)
NEO4J_URI=neo4j+s://your-instance-id.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Application Configuration
DEBUG=true
SECRET_KEY=your_secret_key_here
TOKEN_EXPIRE_MINUTES=10080

# Celery Configuration (Can be skipped initially)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0