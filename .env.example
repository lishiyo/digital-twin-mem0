# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Add the EMBEDDING_MODEL variable to match the dimension of your existing vectors
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7

# Google Gemini API key (necessary for extracting traits, relationships, entities)
GEMINI_API_KEY=your_gemini_api_key_here

# Neo4j Database Configuration (Cloud or local)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Celery Configuration (Can be skipped initially)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Database
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=digitaltwin

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Mem0
MEM0_API_KEY=your_mem0_api_key_here

# Storage (Wasabi, not used yet)
STORAGE_BUCKET=your_bucket_name
STORAGE_ENDPOINT=https://s3.wasabisys.com
STORAGE_ACCESS_KEY=your_wasabi_access_key
STORAGE_SECRET_KEY=your_wasabi_secret_key
STORAGE_REGION=us-west-1

# CORS
CORS_ORIGINS="http://localhost:3000"

# Whether to enable entity/relationship/trait ingestion into Graphiti (default true)
ENABLE_GRAPHITI_INGESTION=True

# Whether to enable ingestion of traits into UserProfile (false now that we are using Graphiti)
ENABLE_PROFILE_UPDATES=False